export EDITOR=vim
export WORKON_HOME=~/Workspace/envs
source /usr/local/bin/virtualenvwrapper.sh 2>/dev/null || source /usr/bin/virtualenvwrapper.sh
bindkey -v
export KEYTIMEOUT=1
function zle-line-init zle-keymap-select {
   RPS1="%B${${KEYMAP/vicmd/-- NORMAL --}/(main|viins)/-- INSERT --}%b"
   RPS2=$RPS1
   zle reset-prompt
}
zle -N zle-line-init
zle -N zle-keymap-select
alias detox="find . -type f -name '*.py[co]' -delete -or -type d -name '__pycache__' -delete && rm -r .tox"
