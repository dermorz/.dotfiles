export EDITOR=vim
export WORKON_HOME=~/Workspace/envs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python
source /usr/local/bin/virtualenvwrapper.sh
bindkey -v
export PATH="$PATH:$HOME/.bin"
export KEYTIMEOUT=1
function zle-line-init zle-keymap-select {
  RPS1="%B${${KEYMAP/vicmd/-- NORMAL --}/(main|viins)/-- INSERT --}%b"
  RPS2=$RPS1
  zle reset-prompt
}
zle -N zle-line-init
zle -N zle-keymap-select
alias detox="find . -type f -name '*.py[co]' -delete -or -type d -name '__pycache__' -delete && rm -r .tox"
alias ap='pwd; echo "Continue?"; read; ansible-playbook --vault-password-file=~/vault_pass.txt -i inventory'
alias av='ansible-vault --vault-password-file=~/vault_pass.txt'
alias retrigger-ci='git commit --allow-empty -m "chore: retrigger ci"'
source ~/kirk
tunnel-anything () {
  ssh -M -S /tmp/tunnel-anything-1337 -fnNT -L "1337:localhost:$1" "$2"
  vared -p "Tunnel is to '$2' open, on 1337->$1 (enter to stop)" -c tmp
  ssh -S /tmp/tunnel-anything-1337 -O exit "$2"
}
delete-merged-branches () {
  for branch in $(git branch --merged | grep -v -E 'master|develop')
  do
    git branch -d $branch
  done
}

# Setup fzf
# ---------

export FZF_COMPLETION_TRIGGER='##'
export FZF_DEFAULT_COMMAND='ag -g ""'
export FZF_DEFAULT_OPTS='--height 40% --reverse --inline-info'
export FZF_CTRL_T_COMMAND="${FZF_DEFAULT_COMMAND}"

if [[ ! "$PATH" == */usr/local/opt/fzf/bin* ]]; then
  export PATH="$PATH:/usr/local/opt/fzf/bin"
fi

# Man path
# --------
if [[ ! "$MANPATH" == */usr/local/opt/fzf/man* && -d "/usr/local/opt/fzf/man" ]]; then
  export MANPATH="$MANPATH:/usr/local/opt/fzf/man"
fi

# Auto-completion
# ---------------

_fzf_compgen_path() {
  ag -g "" "$1"
}

[[ $- == *i* ]] && source "/usr/local/opt/fzf/shell/completion.zsh" 2> /dev/null

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/mpein/google-cloud-sdk/path.zsh.inc' ]; then source '/Users/mpein/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/mpein/google-cloud-sdk/completion.zsh.inc' ]; then source '/Users/mpein/google-cloud-sdk/completion.zsh.inc'; fi
